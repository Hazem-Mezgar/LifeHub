<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient_wellness"
    android:gravity="center"
    android:padding="16dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_fitness"
        android:contentDescription="Wellness Icon" />

    <TextView
        android:id="@+id/wellnessTip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take 5 deep breaths to relax."
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your daily dose of calm"
        android:textSize="14sp"
        android:textColor="#E0E0E0"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/refreshTipButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Tip"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_marginTop="16dp" />
</LinearLayout>